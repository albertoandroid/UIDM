<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
    </style>

    <!-- TOOLBAR -->
    <style name="ToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <!-- Makes the toolbar text whatever color you want for both light/dark-->
        <item name="android:background">@color/colorBackgroundToolbar</item>
    </style>

    <!-- FONTS-->
    <style name="DormakabaText_Base">
        <item name="android:textColorLink">@color/colorTextLink</item>
        <item name="android:textColor">@color/colorMainText</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DormakabaText_Bold" parent="@style/DormakabaText_Base">
        <item name="android:fontFamily">@font/dormablack</item>
    </style>

    <style name="DormakabaText_Regular" parent="@style/DormakabaText_Base">
        <item name="android:fontFamily">@font/dormakabalight</item>
    </style>

    <style name="DormakabaText_Light" parent="@style/DormakabaText_Base">
        <item name="android:fontFamily">@font/dormakabalight</item>
    </style>

    <style name="DormakabaText_Italic" parent="@style/DormakabaText_Base">
        <item name="android:fontFamily">@font/dormakabaitalic</item>
    </style>
    <!--end FONTS-->

    <!-- TEXT-->
    <style name="TextBody" parent="@style/DormakabaText_Regular" />
    <style name="TextBodyBold" parent="@style/DormakabaText_Bold" />
    <style name="TextBodyLight" parent="@style/DormakabaText_Light" />
    <style name="TextBodyItalic" parent="@style/DormakabaText_Italic" />
    <style name="TextBodyLink" parent="@style/DormakabaText_Regular" />

    <style name="TextTitle" parent="@style/TextBodyBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="TextDescription" parent="@style/TextBody">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="TextSmall" parent="@style/TextBodyItalic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_size_11</item>
    </style>
    <!-- end TEXT -->

    <!-- BUTTON-->
    <style name="Button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/size_12</item>
        <item name="android:layout_marginEnd">@dimen/size_12</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonConfirm" parent="@style/Button">
        <item name="android:background">@drawable/switch_btn_bg</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:fontFamily">@fonts/MorebiRoundedBold.ttf</item>
    </style>
    <!-- end BUTTON-->

    <!-- LOGIN COMPONENT/FRAGMENT/ACTIVITY-->
    <style name="LoginNameEditText" parent="@style/DormakabaText_Light">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/size_16</item>
        <item name="android:layout_marginStart">@dimen/size_16</item>
        <item name="android:textColor">@color/colorMainText</item>
        <item name="android:textColorHint">@color/colorAltText</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/size_8</item>
    </style>

    <!-- end LOGIN COMPONENT/FRAGMENT/ACTIVITY-->
</resources>
